
@{
    ViewBag.Title = "EditReviewPage";
}
@model KnowDetroit.Models.Review

<h2>EditReviewPage</h2>
<form action="/Home/UpdateReview" method="post">

    Recommended: <select value="@Model.Recommended " name="Recommended">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select><br />
    Rating:<select value="@Model.Rating" name="Rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
    </select> <br />
    Review:<input type="text" value="@Model.Review1" name="Review1" /> <br />

    <input type="submit" value="Save updates" />
</form>